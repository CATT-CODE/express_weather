<!DOCTYPE html>
<html lang="en">
  <%- include ('./inserts/header') %>

<body class="text-center">

  <div class="container"></div>
    <header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-body   border-bottom shadow-sm">
      <p class="h5 my-0 me-md-auto fw-normal">Weather App</p>
      
      <% if (user) { %>
        <nav class="my-2 my-md-0 me-md-3">
          Welcome, <a href="#" class="p-2 text-dark">
            <%- user %>
          </a>
        </nav>
        <a class="btn btn-outline-primary" href="/users/logout">Logout</a>
        <% } else { %>
          <nav class="my-2 my-md-0 me-md-3">
            <a class="btn btn-outline-primary" href="/users/login">Sign in</a>
          </nav>
          <a class="btn btn-outline-primary" href="/users/signup">Sign up</a>
        <% } %>

    </header>
    </div>

    <h1>Home Page</h1>

  <div class="container">
    <form method="POST" action="/users/home">
      <div class="input-group mb-3">
        <input name="search" type="text" class="form-control" placeholder="Find a location's current weather" aria-label="search" aria-describedby="search" required>
        <button class="btn btn-primary" id="search" type="submit">Search</button>
      </div>
    </form>
    <% if(data) { %>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Current weather in <%- JSON.stringify(data.name) %></h5>
            
            <%- JSON.stringify(data.main.temp) %> degrees Kelvin

        </div>
      </div>
    <% } %>
      </div>

        
      <%- include ('./inserts/scripts') %>

</body>
</html>